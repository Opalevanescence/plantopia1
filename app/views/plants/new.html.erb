<div class="container">
  <h1>Add new plant</h1>

  <div>
     <%= simple_form_for(@plant) do |f| %>
      <%= f.input :name %>
      <%= f.input :category, collection: ['tree', 'flower', 'bush', 'cactus'] %>
      <%= f.input :price, input_html: { min: 1 } %>
      <%= f.input :description %>
      <%= f.submit 'Save', class: "btn btn-success" %>
    <% end %>
  </div>

</div>
