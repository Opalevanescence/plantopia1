<div class="container">
    <%= form_tag plants_path, method: :get, class: "form-inline" do %>
      <%= text_field_tag :query,
        params[:query],
        class: 'form-control',
        placeholder: 'Find a plant'
        %>
      <%= submit_tag 'Search', class: 'btn btn-success ml-2'%>
    <% end %>


    <div>
      <% @groups.each do |category, plants| %>

        <h1 class="cards-header"><%= category.capitalize %></h1>
        <div class="cards">
          <% plants.each do |plant| %>
            <div class="card-plant">
              <%= link_to plant_path(plant) do %>
                <% if plant.photo.attached? %>
                  <%= cl_image_tag plant.photo.key, height: 300, width: 400, crop: :fill, class: "show-plant-image" %>
                <% end %>
              <% end %>
              <div class="card-plant-info">
                <div class="card-plant-info-details">
                  <h3><%= link_to plant.name, plant_path(plant) %></h3>
                  <h3>Â£<%= link_to plant.price, plant_path(plant) %></h3>
                </div>
                <span class="card-plant-show-link">
                  <%= truncate(plant.description, length: 120) %>
                  <%= link_to(plant_path(plant)) do %>
                    ...see more <%= icon("fas", "seedling") %>
                  <% end %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
