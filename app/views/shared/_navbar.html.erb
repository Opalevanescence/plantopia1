
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h2 class="title"><%= link_to "PLANTOPIA", plants_path  %> </h2>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
     <li class="nav-item dropdown">
        <% if current_user %>
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, height: 250, width: 333, crop: :fill, class: 'avatar dropdown-toggle', id: 'navbarDropdown', data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
        <% else %>
          <%= image_tag "https://www.psdgraphics.com/file/female-silhouette.jpg", class: "avatar dropdown-toggle navbar-avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user %>
            <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: 'delete', class: "dropdown-item" %>
          <% else %>
            <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
